<html metal:use-macro="here/main_template/macros/master" i18n:domain="noetique">

  <metal:main fill-slot="main">

    <section id="noetique-section-news" class="mt-0">
      <div class="container">
        <h1 class="text-center">
          <tal:icon tal:replace="structure python:icons.tag('pin')" />
          Epinglé
        </h1>
        <article tal:define="news view/last_news" tal:repeat="item news" tal:attributes="class python:'border-top border-bottom' if repeat['item'].index == 0 else 'border-bottom'">
          <a href="${item/url}">
            <section class="h6 pt-3 mb-0">
              Publié
              <time datetime="${item/effective}" class="pat-display-time" data-pat-display-time="from-now: true">${item/effective}</time>
            </section>
            <h3 class="mb-1">${item/title}</h3>
            <p class="">${item/description}</p>
          </a>
        </article>
      </div>
    </section>

    <section id="noetique-section-agenda" tal:define="events view/next_events" class="mt-4">
      <div class="container">
        <h1 class="text-center">
          <tal:icon tal:replace="structure python:icons.tag('stopwatch')" />
          Rendez-vous publics
        </h1>
        <article tal:repeat="event events" tal:attributes="class python:'border-top border-bottom' if repeat['event'].index == 0 else 'border-bottom'">
          <a href="${event/url}">
            <section class="h5 pt-3 mb-0">
              Le <time datetime="${event/start}" class="pat-display-time" data-pat-display-time="output-format:Do MMMM YYYY;">${event/start}</time>
              à
              <span>${event/location}</span>
            </section>
            <h3 class="mt-0">${event/title}</h3>
            <p>${event/description}</p>
          </a>
        </article>
      </div>
    </section>

    <section id="noetique-section-thoughts" tal:define="thoughts view/last_thoughts" class="mt-4 pb-1 bg-light">
      <div class="container">
        <h1 class="text-center">
          <tal:icon tal:replace="structure python:icons.tag('vector-pen')" />
          Journal philosophique au quotidien
        </h1>
        <article tal:repeat="item thoughts" tal:attributes="class python:'border-top border-bottom' if repeat['item'].index == 0 else 'border-bottom'">
          <a href="${item/url}">
            <h5 class="pt-3 mb-0">
              ${item/title}
                                                        <!--<time datetime="${item/effective}" class="pat-display-time" data-pat-display-time="output-format:Do MMMM YYYY;">${item/effective}</time>-->
            </h5>
            <div>${structure:item/teaser} ...</div>
          </a>
        </article>
        <footer class="mt-3 h5 text-end">
          <a href="${view/portal_path}/journal">Tout le journal</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-articles" tal:define="articles view/last_articles" class="mt-4">
      <div class="px-4">
        <h1 class="text-center">
          <tal:icon tal:replace="structure python:icons.tag('megaphone')" />
          Billets
        </h1>
        <p class="text-center h3">Ce que j'ai à dire au monde sur le monde</p>
        <div class="row">
          <div class="col-12 col-lg-4" tal:repeat="item articles">
            <article class="card h-100">
              <a href="${item/url}">
                <div class="card-body">
                  <section class="h6 pt-3">
                    Publié le
                    <time datetime="${item/effective}" class="pat-display-time" data-pat-display-time="output-format:Do MMMM YYYY">${item/effective}</time>
                  </section>
                  <h4 class="card-title">${item/title}</h4>
                  <p class="card-text">${item/description}</p>
                </div>
              </a>
            </article>
          </div>
        </div>
        <footer class="mt-3 h5 text-end">
          <a href="${view/portal_path}/billets">Tous les billets</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-books" tal:define="books view/last_books" class="mt-4">
      <div class="container">
        <h1 class="text-center">
          <tal:icon tal:replace="structure python:icons.tag('book')" />
          Mes derniers livres
        </h1>
        <div class="row">
          <div class="col-12 col-md-6 col-lg-3" tal:repeat="book books">
            <article class="card h-100">
              <a href="${book/url}">
                <img class="card-img-top p-5" tal:attributes="src string:${book/url}/@@images/cover/mini" />
                <div class="card-body">
                  <h4 class="card-title">${book/title}</h4>
                  <section class="card-text">
                    <strong>Auteur</strong> : ${book/author}
                    <br />
                    <strong>Editeur</strong> : ${book/publisher}
                    <br />
                    <strong>Année</strong> : ${book/year}
                  </section>
                </div>
              </a>
            </article>
          </div>
        </div>
        <footer class="mt-3 h5 text-end">
          <a href="${view/portal_path}/livres">Tous les ouvrages</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-videos" class="mt-4">
      <div class="container">
        <h1 class="text-center">
          <tal:icon tal:replace="structure python:icons.tag('camera-video')" />
          Vous préférez en images
        </h1>
        <article class="card">
          <!--<iframe frameborder="0" allowfullscreen width="100%" tal:attributes="src string:https://www.youtube.com/embed/${video/video_id}"></iframe>-->
        </article>
        <footer class="mt-3 h5 text-end">
          <a href="https://www.youtube.com/channel/UCplO3-iuNvhEinVj8Sxh6XA">Chaîne Youtube de Marc Halévy</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-services" class="mt-4">
      <div class="container">
        <h1 class="text-center">
          <tal:icon tal:replace="structure python:icons.tag('info-circle')" />
          Puis-je vous aider ?
        </h1>
        <p class="text-center h3">Services aux dirigeants, experts et penseurs</p>
