<html metal:use-macro="here/main_template/macros/master" i18n:domain="noetique">

  <metal:main fill-slot="main">
    <style>
        #noetique-section-thoughts {
        background-color: #EEE;
        padding: 1rem;
        }
    </style>

    <section id="noetique-section-news" class="mt-4">
      <div class="container">
        <h2 class="text-center">Epinglé</h2>
      </div>
    </section>

    <section id="noetique-section-agenda" tal:define="events view/next_events" class="mt-4">
      <div class="container">
        <h2 class="text-center">Rendez-vous publics</h2>
        <article tal:define="events view/next_events" tal:repeat="event events" class="card">
          <a href="${event/url}">
            <h3>${event/title}</h3>
            <span class="pat-moment" data-pat-moment="format:Do MMMM YYYY;">${event/start}</span>
              -
            <span>${event/location}</span>
            <p>${event/description}</p>
          </a>
        </article>
      </div>
    </section>

    <section id="noetique-section-thoughts" tal:define="thoughts view/last_thoughts" class="mt-4">
      <div class="container">
        <h2 class="text-center">Journal philosophique au quotidien</h2>
        <footer class="mt-3 h5 text-end">
          <a href="${view/portal_path}/journal">Tout le journal</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-articles" tal:define="articles view/last_articles" class="mt-4">
      <div class="container">
        <h2 class="text-center">Ce que j'ai à dire au monde sur le monde</h2>
        <footer class="mt-3 h5 text-end">
          <a href="${view/portal_path}/billets">Tous les billets</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-books" tal:define="books view/last_books" class="mt-4">
      <div class="container">
        <h2 class="text-center">Mes derniers livres</h2>
        <div class="row">
          <div class="col-12 col-md-6 col-lg-3" tal:repeat="book books">
            <article class="card h-100">
              <a href="${book/url}">
                <img class="card-img-top p-5" tal:attributes="src string:${book/url}/@@images/cover/mini" />
                <div class="card-body">
                  <h4 class="card-title">${book/title}</h4>
                  <section class="card-text">
                    <strong>Auteur</strong> : ${book/author}
                    <br />
                    <strong>Editeur</strong> : ${book/publisher}
                    <br />
                    <strong>Année</strong> : ${book/year}
                  </section>
                </div>
              </a>
            </article>
          </div>
        </div>
        <footer class="mt-3 h5 text-end">
          <a href="${view/portal_path}/livres">Tous les ouvrages</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-videos" class="mt-4">
      <div class="container">
        <h2 class="text-center">Vous préférez en images</h2>
        <article class="card">
          <!--<iframe frameborder="0" allowfullscreen width="100%" tal:attributes="src string:https://www.youtube.com/embed/${video/video_id}"></iframe>-->
        </article>
        <footer class="mt-3 h5 text-end">
          <a href="https://www.youtube.com/channel/UCplO3-iuNvhEinVj8Sxh6XA">Chaîne Youtube de Marc Halévy</a>
        </footer>
      </div>
    </section>

    <section id="noetique-section-services" class="mt-4">
      <div class="container">
        <h2 class="text-center">Puis-je vous aider ?</h2>
        <p class="text-center h4">Services aux dirigeants, experts et penseurs</p>
